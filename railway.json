{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["cd backend && pip install -r requirements-minimal.txt"]
        },
        "setup": {
          "cmds": ["cd backend && python init_database.py || true"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd backend && python -m api.server",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
