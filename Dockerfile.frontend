# Dockerfile para Frontend React
FROM node:20-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar código
COPY . .

# Exponer puerto Vite
EXPOSE 5173

# Comando desarrollo
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

# Para producción, usar:
# RUN npm run build
# CMD ["npm", "run", "preview"]
