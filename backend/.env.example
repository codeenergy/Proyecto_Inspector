# Environment
ENVIRONMENT=production

# API Configuration (Railway will override PORT automatically)
API_HOST=0.0.0.0
API_PORT=8000

# CORS - Add your Vercel frontend URL
CORS_ORIGINS=https://proyecto-inspector.vercel.app,http://localhost:5173,http://localhost:5174

# Database (Railway provides this automatically if you add a database service)
DATABASE_URL=sqlite:///./inspector.db

# AI Configuration - REQUIRED
GEMINI_API_KEY=your-gemini-api-key-here
ENABLE_AI_ANALYSIS=true

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Browser Configuration
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# Scheduler
CHECK_INTERVAL_MINUTES=10
MAX_CONCURRENT_CHECKS=5
