# ==========================================
# Ad-Inspector Bot - Environment Variables
# ==========================================

# General Configuration
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./inspector.db
# Para PostgreSQL: postgresql://user:password@localhost:5432/ad_inspector
DB_ECHO=false

# Redis (para cache y jobs)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Scheduler 24/7
CHECK_INTERVAL_MINUTES=10
MAX_CONCURRENT_CHECKS=5
RETRY_FAILED_CHECKS=true
MAX_RETRY_ATTEMPTS=3

# Browser Configuration
HEADLESS_BROWSER=true
BROWSER_TYPE=chromium
BROWSER_TIMEOUT=30000
USER_AGENT=

# Performance Thresholds
MAX_LOAD_TIME_SECONDS=3.5
MIN_LIGHTHOUSE_SCORE=70

# ==========================================
# AI Configuration
# ==========================================

# Google Gemini (REQUERIDO)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
ENABLE_AI_ANALYSIS=true

# OpenAI (Opcional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# ==========================================
# Email Notifications
# ==========================================

# SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@ad-inspector.dev

# SendGrid (Alternativa a SMTP)
SENDGRID_API_KEY=

# ==========================================
# Alertas Multi-Canal
# ==========================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#alerts

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Twilio (SMS - Opcional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ==========================================
# CRM Integrations
# ==========================================

# HubSpot
HUBSPOT_API_KEY=
HUBSPOT_PORTAL_ID=

# Salesforce
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
SALESFORCE_SECURITY_TOKEN=

# ==========================================
# Monitoring & Analytics
# ==========================================

# Sentry (Error tracking)
SENTRY_DSN=

# Prometheus
ENABLE_PROMETHEUS=false

# ==========================================
# Security
# ==========================================

SECRET_KEY=change-me-in-production-use-strong-random-key-min-32-chars
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
